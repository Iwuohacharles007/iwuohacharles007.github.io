<% layout('layouts/boilerplate') %>
<div class="container mt-4">
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" name="campground[title]" class="form-control" value="<%= campground.title %>" required>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price:</label>
            <input type="number" id="price" name="campground[price]" class="form-control" value="<%= campground.price %>" step="0.01" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="campground[description]" class="form-control" rows="3" required><%= campground.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input type="text" id="location" name="campground[location]" class="form-control" value="<%= campground.location %>" required>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image URL:</label>
            <input type="url" id="image" name="campground[image]" class="form-control" value="<%= campground.image %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Campground</button>
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-secondary">Cancel</a> <!-- Optional cancel button -->
    </form>
</div>
